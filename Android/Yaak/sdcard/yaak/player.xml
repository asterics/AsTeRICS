<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<keyboard rows="2" cols="4" bgcolor="#FFFFFF">
	<painter method="invert" fontcolor="#000000" bgcolor="#FFFFFF" 
	    bordercolor="#FFFF00" bordersize="2.0f"/>
    <scanner method="column" timeoutrounds="3" scantime="800" repeattime="1800"/>
    <tcp enable="1" port="4444"/>
	<rows>
		<row>
			<button bgColor="#FF00FF">
				<icon>next.png</icon>
				<text>Next</text>
				<action>next</action>
			</button>
			<button>
				<icon>volup.png</icon>
				<text>Vol+</text>
				<action>volup</action>
			</button>
			<button>
				<icon>play.png</icon>
				<text>Play</text>
				<action>play</action>
			</button>
			<button>
				<icon>stop.png</icon>
				<text>Stop</text>
				<action>stop</action>
			</button>
		</row>
		<row>
			<button bgColor="#FF00FF">
				<icon>prev.png</icon>
				<text>Prev</text>
				<action>prev</action>
			</button>
			<button>
				<icon>voldown.png</icon>
				<text>Vol-</text>
				<action>voldown</action>
			</button>
			<button>
				<icon>pause.png</icon>
				<text>Pause</text>
				<action>pause</action>
			</button>
			<button>
				<icon>back.png</icon>
				<text>Back</text>
				<action>@load:default.xml</action>
			</button>
		</row>
	</rows>
</keyboard>
