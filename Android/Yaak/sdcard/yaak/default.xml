<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<keyboard rows="1" cols="3" bgcolor="#FFFFFF">
	<painter method="invert" fontcolor="#000000" bgcolor="#FFFFFF" 
	    bordercolor="#FFFF00" bordersize="2.0f"/>
    <scanner method="single" timeoutrounds="3" scantime="1500" repeattime="1000"/>
    <tcp enable="1" port="4444"/>
	<rows>
		<row>
			<button bgColor="#FF00FF">
				<icon>light.png</icon>
				<text>Light</text>
				<action>@load:light.xml</action>
			</button>
			<button>
				<icon>player.png</icon>
				<text>Music</text>
				<action>@load:player.xml</action>
			</button>
			<button>
				<icon>quit.png</icon>
				<text>Exit</text>
				<action>@quit</action>
			</button>
		</row>
	</rows>
</keyboard>
