#!/bin/bash
# postinst script
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

#source appname
#. APE.properties
APPNAME="$DPKG_MAINTSCRIPT_PACKAGE"
APPPATH="/opt/$APPNAME/app/"
APPINSTALLDIR="/opt/$APPNAME"
WRITEDIR="/var/opt/$APPNAME/"

case "$1" in
    configure)
        echo "Executing Postinst in dir $PWD"
        echo $DPKG_MAINTSCRIPT_PACKAGE
        echo Adding shortcut to the menu

		echo "Creating desktop menu entry $APPNAME"
		xdg-desktop-menu install --novendor $APPINSTALLDIR/$APPNAME.desktop
		
		#irtrans preparations
		mkdir -p $APPPATH/tools/remotes #needed for irtrans server to work

		echo creating symlinks for models, profile and data folders to tmp folder
		rm -Rf $WRITEDIR
		mkdir -p $WRITEDIR
		mkdir -p $APPPATH/tmp
		mv $APPPATH/models  $WRITEDIR
		mv $APPPATH/profile $WRITEDIR 
		mv $APPPATH/data $WRITEDIR
		mv $APPPATH/web $WRITEDIR
		mv $APPPATH/tmp $WRITEDIR
		[ -e $APPPATH/areProperties ] && mv $APPPATH/areProperties $WRITEDIR || touch $WRITEDIR/areProperties

		# component FS20 udev rules
		echo creating udev rule 50-asterics-fs20.rules for FS20 devices
		echo 'ATTRS{idProduct}=="e015", ATTRS{idVendor}=="18ef", MODE="0660", GROUP="plugdev"' > /etc/udev/rules.d/50-asterics-fs20.rules
		
		# component IrTrans udev rules
		echo creating udev rule 49-asterics-irtrans.rules for IRTrans devices
		echo 'SUBSYSTEMS=="usb", ATTRS{idProduct}=="fc60", ATTRS{idVendor}=="0403",SYMLINK+="ttyIRTrans", MODE="0666"' > /etc/udev/rules.d/49-asterics-irtrans.rules
		
		# soft-link for FS20 component, according to:
		# https://github.com/gary-rowe/hid4java
		if [ "$(dpkg --print-architecture)" == "armhf" ]; then
			echo "linking libudev for hid4java library (only on ARM)"
			if [ ! -e /lib/arm-linux-gnueabihf/libudev.so.0 ]; then
				ln -sf /lib/arm-linux-gnueabihf/libudev.so.1 /lib/arm-linux-gnueabihf/libudev.so.0
			fi
			if [ ! -e /usr/lib/arm-linux-gnueabihf/libhidapi.so ]; then
				ln -s /usr/lib/arm-linux-gnueabihf/libhidapi-libusb.so.0 /usr/lib/arm-linux-gnueabihf/libhidapi.so
			fi
		fi
	
		chmod -R o+w $WRITEDIR
		ln -sf $WRITEDIR/models $APPPATH/models
		ln -sf $WRITEDIR/profile $APPPATH/profile
		ln -sf $WRITEDIR/data $APPPATH/data
		ln -sf $WRITEDIR/web $APPPATH/web
		ln -sf $WRITEDIR/tmp $APPPATH/tmp
		ln -sf $WRITEDIR/areProperties $APPPATH/areProperties
	
		chmod +x $APPPATH/start*.sh

		echo ""
		echo ""
		echo "You need a Java Runtime, oracle java 8 is recommended, but openjdk should work as well:"
		echo sudo apt-get install oracle-java8-installer
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
