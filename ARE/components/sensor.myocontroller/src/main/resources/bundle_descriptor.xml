<?xml version="1.0"?>
<componentTypes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="bundle_model.xsd">

    <componentType id="asterics.myocontroller"
                   canonical_name="eu.asterics.component.sensor.myocontroller.MyocontrollerInstance">
        <type subtype="Bioelectric Measurement">sensor</type>
        <singleton>false</singleton>
        <description>This plugin receives a packet stream from the Myocontroller device</description>
        <ports>
			<outputPort id="Channel1">
				<description>output port for channel1 data</description>
				<dataType>integer</dataType>
			</outputPort>
			<outputPort id="Channel2">
				<description>output port for channel2 data</description>
				<dataType>integer</dataType>
			</outputPort>
			<outputPort id="Channel3">
				<description>output port for channel3 data</description>
				<dataType>integer</dataType>
			</outputPort>
			<outputPort id="Channel4">
				<description>output port for channel4 data</description>
				<dataType>integer</dataType>
			</outputPort>
			<outputPort id="Channel5">
				<description>output port for channel5 data</description>
				<dataType>integer</dataType>
			</outputPort>
			<outputPort id="Channel6">
				<description>output port for channel6 data</description>
				<dataType>integer</dataType>
			</outputPort>
        </ports>
		<events>
		</events>			
        <properties>
			<property name="ComPort"
				type="string"
				value="COM4"
				description="The COM Port which will be opened to receive a P2-packet stream"/>
			<property name="BaudRate"
				type="integer"
				value="57600"
				description="The baud rate for the P2 packet stream"/>
			<property name="useFile"
				type="boolean"
				value="false"
				description="If true, instead of the COM-port the given file is used as datasource"/>
			<property name="writeToFile"
				type="boolean"
				value="false"
				description="If true, COM-port data is written to the given file"/>
			<property name="filename"
				type="string"
				value=""
				description="The filename to use, if 'useFile' is true (path relative to folder bin/ARE/data)."/>

        </properties>

    </componentType>
</componentTypes>