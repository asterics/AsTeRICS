				<description>Character [a-z], digit [0-9] or one of predefined commands to send. See help file for command descriptions.</description>
				<mustBeConnected>false</mustBeConnected>
				<dataType>string</dataType>
			</inputPort>


        </ports>
		<events>


		</events>			
        <properties>

        </properties>

    </componentType>
