<?xml version="1.0"?>
<componentTypes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="bundle_model.xsd">

    <componentType id="asterics.proxy.remoteconsumer"
                   canonical_name="eu.asterics.component.proxy.remoteconsumer.RemoteConsumerInstance">
        <type>actuator</type>
        <singleton>false</singleton>
        <description>Proxy component that writes data, received from another 
        component, to a socket</description>
        <ports>
            <inputPort id="proxy_in"> 
                <description>Input port for connecting to the data provider</description>
                <mustBeConnected>false</mustBeConnected>
                <dataType>integer</dataType>
            </inputPort>
        </ports>
    </componentType>
</componentTypes>